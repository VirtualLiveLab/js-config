{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Astro",
  "extends": ["./base.json", "./vite.json"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    // This plugin is required to import Astro from ts files outside VSCode.
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  }
}
